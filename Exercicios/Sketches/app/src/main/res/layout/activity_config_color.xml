<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_l1"
    tools:context=".ConfigColorActivity"
    android:padding="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ask_title"
        android:textSize="20sp"
        android:textColor="@color/color_c1"
        />
    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxEms="30"
        android:hint="@string/hint_title"
        android:fontFamily="monospace"
        />
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_n1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ask_background_color"
            android:textSize="20sp"
            android:textColor="@color/color_c1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ask_red"
                android:textSize="20sp"
                android:textColor="@color/red"
                />
            <SeekBar
                android:id="@+id/seekRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@color/red"
                android:progress="75"
                android:progressTint="@color/red"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ask_green"
                android:textSize="20sp"
                android:textColor="@color/green"
                />
            <SeekBar
                android:id="@+id/seekGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@color/green"
                android:progress="75"
                android:progressTint="@color/green"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ask_blue"
                android:textSize="20sp"
                android:textColor="@color/blue"
                />
            <SeekBar
                android:id="@+id/seekBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:thumbTint="@color/blue"
                android:progress="75"
                android:progressTint="@color/blue"
                />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_c1"
            android:layout_margin="16dp"
            />

    </LinearLayout>
</LinearLayout>