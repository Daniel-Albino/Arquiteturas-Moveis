<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/color_l1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/sketches_title"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@color/color_c1"
        android:textColor="@color/white"
        android:padding="32dp"
        android:textSize="32sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_gravity="center_horizontal|bottom"
        >
        <Button
            android:id="@+id/btnSolidColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_solid_color"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_gallery_image"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/btnPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_photo"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:textSize="24sp"
            />
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_history"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:textSize="24sp"
            />
    </LinearLayout>


</FrameLayout>